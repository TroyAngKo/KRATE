                                    </div>
                                    <div class="col-sm-9 showtext"><center><br>
                                        <% rating = Review.where(movie_id: show.id).where('rating is not null').average(:rating) %>
                                        <h5><%= show.title %></h5>
                                        <h5>Rating: <%= !rating.nil? ? rating.round(2) : 'No ratings yet' %></h5>
                                        <h5><%= link_to "Read Reviews",show_path(show.id) %></h5>
                                        </center>
                                    </div>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        
