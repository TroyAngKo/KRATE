    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-8">
                <div id="my-slider" class="carousel slide" data-ride="carousel">

                    <!-- Indicators dot nov -->

                    <ol class="carousel-indicators">
                        <li data-target="#my-slider" data-slide-to="0" class="active"></li>
                        <li data-target="#my-slider" data-slide-to="1"></li>
                        <li data-target="#my-slider" data-slide-to="2"></li>
                        <li data-target="#my-slider" data-slide-to="3"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="overlay">Trending</div>
                    <div class="carousel-inner with-hover-main" role="listbox" style="height:520px">
                        <% @trending.each_with_index do |show, key| %>
                            <div class="item <%= key == 0 ? 'active' : '' %>">
                                <%= link_to(show_path(show.id)) do %>
                                    <img src="http://image.tmdb.org/t/p/original<%= show.backdrop_path %>"border="0" alt="Image and video hosting by TinyPic" class="img-responsive"/> 
                                    <div class="overlay-img" style="height:520px;width:100%;">
                                        <div class="text">
                                            <h5><%= show.title %></h5>
                                            <% rating = Review.where(movie_id: show.id).where('rating is not null').average(:rating) %>
                                            <% recommendations = Review.where(movie_id: show.id).where(recommend: true).count %>
                                            <h5>Rating: <%= !rating.nil? ? rating.round(2) : 'No ratings yet' %></h5>
                                            <h5>Recommended by: <%= !recommendations.nil? ? recommendations : 'No recommendations yet' %></h5>
                                        </div>
                                    </div>
                                <% end %> 

                            </div>
                        <% end %>
                    </div>

                    <!-- Control or next and prev buttons -->

                    <a class="left carousel-control" href="#my-slider" role="button" data-slide="prev" style="background: #f49d9d">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>

                    <a class="right carousel-control" href="#my-slider" role="button" data-slide="next" style="background: #f49d9d">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

